<div class="right-contents">
  <div class="container">
    <div class="row">
      <div class = "page-title-area">
        <h1 class="text-grey">Send Message</h1>
        <p class = "text-grey">全体への告知事項を送信します。</p>
        <Hr align = "left" width = "800">
      </div>
      <%= form_for @message do |f| %>
        <div class = "form-group">
          <%= f.label :'タイトル',class: 'text-grey' %>
          <%= f.text_area :message_title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :'内容' , class: 'text-grey' %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class = "block">
          <%= f.submit '投稿', class: 'btn btn-white' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
