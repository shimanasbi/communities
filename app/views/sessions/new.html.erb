<div class="container">
  <div class = "row">
    <div class="right-contents">
      <div class = "page-title-area">
        <h1 class="login-text text-grey">Log in</h1>
        <p class = "text-grey">ログインページです。<br>
          お使いのアカウントでログインしてください。
        </p>
        <Hr align = "left" width = "800">
      </div>
      <%= form_for :session, url: login_path do |f| %>
        <div class="form-group">
          <%= f.label :'メールアドレス', class: 'text-grey' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :'パスワード', class: 'text-grey' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class = "block">
          <%= f.submit "ログイン", class: 'btn btn-white' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
